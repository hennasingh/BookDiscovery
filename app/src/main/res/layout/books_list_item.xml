<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/colorBG"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/image_book"
        android:layout_width="@dimen/dimen_200dp"
        android:layout_height="@dimen/dimen_120dp"
        android:layout_weight="2"
        android:adjustViewBounds="true"
        android:scaleType="centerCrop"
        tools:background="@drawable/image_not_found" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_120dp"
        android:layout_weight="4"
        android:padding="@dimen/padding_6dp">

        <TextView
            android:id="@+id/book_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/dimen_10dp"
            android:layout_marginLeft="@dimen/dimen_5dp"
            android:layout_marginTop="@dimen/dimen_5dp"
            android:ellipsize="end"
            android:maxLines="2"
            android:textColor="@color/purple"
            android:textSize="@dimen/text_14sp"
            tools:text="@string/placeholder_title" />

        <TextView
            android:id="@+id/book_author"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/book_title"
            android:layout_marginBottom="@dimen/dimen_10dp"
            android:layout_marginLeft="@dimen/dimen_5dp"
            android:ellipsize="end"
            android:maxLines="1"
            android:textColor="@color/red"
            android:textSize="@dimen/text_14sp"
            tools:text="@string/placeholder_author" />

        <TextView
            android:id="@+id/book_publisher"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/book_author"
            android:layout_marginBottom="@dimen/dimen_10dp"
            android:layout_marginLeft="@dimen/dimen_5dp"
            android:textColor="@color/orange"
            android:textSize="@dimen/text_12sp"
            tools:text="@string/placeholder_publisher" />

        <TextView
            android:id="@+id/book_publishedDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/book_publisher"
            android:layout_marginLeft="@dimen/dimen_5dp"
            android:textColor="@color/orange"
            android:textSize="@dimen/text_12sp"
            tools:text="@string/published_date" />

    </RelativeLayout>

</LinearLayout>