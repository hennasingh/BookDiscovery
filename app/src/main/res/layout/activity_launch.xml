<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/pile_books">

    <TextView
        android:id="@+id/book_heading"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/heading_marginT"
        android:gravity="center_horizontal"
        android:text="@string/book_heading"
        android:textColor="@color/book_heading"
        android:textSize="@dimen/heading_text_size"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/enter_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/book_heading"
        android:layout_marginTop="120dp"
        android:gravity="center"
        android:text="@string/enter_book_name"
        android:textColor="@color/enter_name"
        android:textSize="@dimen/enter_text_size" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/enter_name"
        android:layout_marginTop="@dimen/linear_marginT"
        android:orientation="horizontal">

        <EditText
            android:id="@+id/book_title"
            android:layout_width="0dp"
            android:layout_marginEnd="@dimen/edit_marginR"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/edit_marginL"
            android:inputType="text"
            android:layout_weight="4"
            android:hint="@string/enter_book_title" />

        <Button
            android:id="@+id/button_search"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/search_marginR"
            android:layout_weight="1"
            android:background="@drawable/search_icon" />

    </LinearLayout>

</RelativeLayout>
